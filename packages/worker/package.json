{
  "name": "@hexed/worker",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "./worker": "./src/worker.ts"
  },
  "scripts": {
    "prebuild": "rm -rf ./tsconfig.declarations.tsbuildinfo",
    "build": "tsc -p tsconfig.declarations.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist node_modules",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,mdx}\" --ignore-path=\"../.prettierignore\"",
    "format:fix": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,mdx}\" --ignore-path=\"../../.prettierignore\""
  },
  "dependencies": {
    "@hexed/file": "workspace:*",
    "@hexed/logger": "workspace:*",
    "chart.js": "^4.4.0"
  },
  "devDependencies": {
    "@hexed/eslint-config": "workspace:*",
    "@hexed/prettier-config": "workspace:*",
    "@hexed/typescript-config": "workspace:*",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "happy-dom": "^15.11.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "prettier": "@hexed/prettier-config"
}