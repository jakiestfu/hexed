{
  "extends": "@hexed/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.ts",
    "*.tsx",
    "*.mjs",
    "vite.config.ts"
  ],
  "exclude": [".cache", ".turbo", "build", "dist", "node_modules"]
}
